<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:cornflowerblue">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @{
                    var isUserAuth = User.Identity.IsAuthenticated;
                }

                <span class="glyphicon glyphicon-education" style="margin-top:5%">@Html.ActionLink("Одногруппники", "Index", "Home", new { area = "" }, new { style = "color:ivory; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:22px" })</span>
            </div>
            <div class="navbar-collapse collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                    @{
                        if (isUserAuth)
                        {
                            <li>@Html.ActionLink("Опросы", "Index", "Interview", new { area = "" }, new { style = "color:ivory" })</li>
                            <li>@Html.ActionLink("Результаты опросов", "ResultsInterviews", "Interview", new { area = "" }, new { style = "color:ivory" })</li>
                            <li>@Html.ActionLink("Создание опроса", "Creator", "Interview", new { area = "" }, new { style = "color:ivory" })</li>
                            <li>@Html.ActionLink("Моя страница", "PersonalInfo", "Personal", new { area = "" }, new { style = "color:ivory" })</li>
                            <li>@Html.ActionLink("Выход", "LogoutPage", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Вход", "Login", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                            <li>@Html.ActionLink("Регистрация", "Register", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="width:100%">
        @RenderBody()
        <div class="navbar navbar-inverse navbar-fixed-bottom" style="background-color:cornflowerblue">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-2">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" style="color:ivory">Меню</a>
                </div>
                <style>
                    li:hover {
                        background-color:steelblue;
                    }
                </style>
                <div class="navbar-collapse collapse" id="navbar-collapse-2">
                    <ul class="nav navbar-nav">
                        @{
                            if (isUserAuth)
                            {
                                <li>@Html.ActionLink("Мои сообщения", "Index", "PersonalMessage", new { area = "" }, new { style = "color:ivory" })</li>
                                <li>@Html.ActionLink("Групповые сообщения", "Index", "GroupMessage", new { area = "" }, new { style = "color:ivory" })</li>
                            }
                        }
                        <li>@Html.ActionLink("Поиск групп", "SearchGroup", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                        <li>@Html.ActionLink("Поиск пользователей", "Search", "Home", new { area = "" }, new { style = "color:ivory" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
